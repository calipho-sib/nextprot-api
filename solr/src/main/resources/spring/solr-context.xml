<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="solrConfiguration" class="org.nextprot.api.solr.SolrConfiguration">
		<property name="solrCores">
			<list>
				<value>org.nextprot.api.solr.index.GoldAndSilverEntryCore</value>
				<value>org.nextprot.api.solr.index.GoldOnlyEntryCore</value>
				<value>org.nextprot.api.solr.index.CvCore</value>
				<value>org.nextprot.api.solr.index.PublicationCore</value>
			</list>
		</property>
	</bean>

</beans>