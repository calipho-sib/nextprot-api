<publication type="$publication.publicationType.toLowerCase()" date="$publication.getPublicationYear()" name="#if($publication.cvJournal.name)$publication.cvJournal.name#end" volume="$publication.volume" first="$publication.firstPage" last="$publication.lastPage">
	<title>
	    <![CDATA[$publication.title]]>
	</title>
	<author-list>
		#foreach($author in $publication.authors)
			#if($author.isPerson())
                <person name="$author.lastName $StringUtils.getAuthorNameFormatter().formatForenameInitials($author.foreName)"/>
			#else
                <consortium name="$author.lastName"/>
			#end
		#end
	</author-list>
    <xref-list>
		#foreach($xref in $publication.dbXrefs)
			#parse('xref.xml.vm')
		#end
    </xref-list>
</publication>