<publication type="$publication.publicationType.toLowerCase()" #if($publication.getPublicationDate())date="$publication.getTextDate()"#end #if($publication.cvJournal.name)name="$publication.cvJournal.name"#end #if(!$publication.volume.isEmpty())volume="$publication.volume"#end #if(!$publication.firstPage.isEmpty())first="$publication.firstPage"#end #if(!$publication.lastPage.isEmpty())last="$publication.lastPage"#end>
	<title>
	    <![CDATA[$publication.title]]>
	</title>
	<author-list>
		#foreach($author in $publication.authors)
			#if($author.isPerson())
                <person name="$author.lastName $StringUtils.getAuthorNameFormatter().formatForenameInitials($author.foreName)"/>
			#else
                <consortium name="$author.lastName"/>
			#end
		#end
	</author-list>
	#if($publication.dbXrefs.size() > 0)
    <xref-list>
		#foreach($xref in $publication.dbXrefs)
			#parse('xref.xml.vm')
		#end
    </xref-list>
	#end
</publication>